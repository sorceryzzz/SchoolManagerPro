    ViewBag.Title = "Login";
    Layout = null;
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>登录</title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script type="text/javascript">
        function custInit() {
            //初始化焦点
            loginfrm.j_username.focus();
        }
        function resetForm() {
            $("#j_username").val("");
            $("#j_password").val("");
            $("#j_checknum").val("");
            $("#j_username").focus();
            return false;
        }
        function a() {
            //var obj = document.getElementById("j_username").value;
            //if (obj == "admin") {
            //    document.loginfrm.action = "0-0-总菜单.html";
            //}
            var userName = $("#j_username").val();
            if (userName == "") {
                $("#errorMsg").text("请输入用户名！");
                return false;
            }
            $("#errorMsg").val("");
            var userPwd = $("#j_password").val();
            if (userPwd == "") {
                $("#errorMsg").text("请输入密码！");
                return false;
            }
            $("#errorMsg").val("");
            var code = $("#j_checknum").val();
            $("#errorMsg").text("请输入验证码！");
            if (code == "") {
                return false;
            }
            $("#errorMsg").text("");
            $.post("/Students/CheckLogin", { name: userName, password: userPwd, code: code }, function (data) {             
                if (data == "ok") {
                    alert("登录成功");
                    window.location.href = "/Home/Index";
                }
                else {
                    $("#valiCode").attr('src', "/Students/GetCode?cod3=" + (new Date()).getTime());
                    $("#j_username").val("");
                    $("#j_password").val("");
                    $("#j_checknum").val("");
                    $("#j_username").focus();
                    alert(data);
                }
            });
        }
        $(function () {
            $("#valiCode").bind("click", function () {
                this.src = "/Students/GetCode?cod3=" + (new Date()).getTime();
            });
        });
    </script>
